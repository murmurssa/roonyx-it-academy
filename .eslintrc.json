{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "global-require": 0,
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "import/no-unresolved": "off",
        "no-console": "off"
    }
}
